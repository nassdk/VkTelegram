<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_16"
        android:background="?android:selectableItemBackground"
        android:paddingHorizontal="@dimen/base_padding_16">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="120dp"
            app:layout_constraintEnd_toStartOf="@id/description"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            style="@style/Widget.App.TextView.White.Bold.16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_margin_8"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@id/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/description"
            tools:text="Тайтл"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            style="@style/Widget.App.TextView.White.14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_margin_12"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="@id/image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintTop_toTopOf="@id/image"
            tools:text="Описание ОписаниеОписаниеОписаниеОписаниеОписаниеОписание"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/views"
            android:maxLines="1"
            style="@style/Widget.App.TextView.Gray.14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/description"
            app:layout_constraintTop_toBottomOf="@id/description"
            tools:text="200k просмотров"/>

</androidx.constraintlayout.widget.ConstraintLayout>